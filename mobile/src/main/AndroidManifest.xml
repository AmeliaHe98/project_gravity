<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sintef.android.gravity" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AdvancedActivity"
            android:label="@string/advanced_activity"
            android:screenOrientation="sensorPortrait"/>

        <activity
            android:name=".wizard.WizardMain"
            android:label="@string/wizard_activity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/Theme.AppCompat.Light"/>

        <activity
            android:name=".NotificationActivity"
            android:taskAffinity=""
            android:excludeFromRecents="true"/>

        <service android:enabled="true" android:name=".MainService" />
        <service android:name=".RemoteSensorService">
            <intent-filter>
                <action
                    android:name="com.google.android.gms.wearable.BIND_LISTENER"/>
            </intent-filter>
        </service>
    </application>

</manifest>
